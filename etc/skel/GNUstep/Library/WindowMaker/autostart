#conky &
#wmclock &
#wmsystray &
#wmsystemtray &
#wmix &
xdg_menu &
pamac-tray-plasma &
nm-applet &
#yakuake &
/usr/lib/polkit-kde-authentication-agent-1 &
#spice-vdagent -x &
xset m 20/10 4
